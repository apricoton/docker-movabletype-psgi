FROM ubuntu:16.04
RUN sed -i 's/\/archive.ubuntu.com/\/jp.archive.ubuntu.com/g' /etc/apt/sources.list; apt update; apt -y dist-upgrade
RUN apt -y install build-essential apache2 php php-intl php-cli php-curl php-mbstring php-mcrypt php-mysql php-gd php-json php-xmlrpc php-sqlite3 libapache2-mod-php
RUN a2enmod proxy; a2enmod include; a2enmod rewrite; a2enmod proxy_http;

ARG UID_MIN
ARG GID_MIN
RUN sed -i -e "s|^UID_MIN.*$|UID_MIN $UID_MIN|" /etc/login.defs
RUN sed -i -e "s|^GID_MIN.*$|GID_MIN $GID_MIN|" /etc/login.defs
RUN useradd docker

ENV APACHE_RUN_USER docker
ENV APACHE_RUN_GROUP docker
ENV APACHE_PID_FILE /var/run/apache2.pid
ENV APACHE_RUN_DIR /var/run/apache2
ENV APACHE_LOG_DIR /var/log/apache2
ENV APACHE_LOCK_DIR /var/lock/apache2

RUN sed -i -e "s|AddOutputFilter INCLUDES .shtml|AddOutputFilter INCLUDES .shtml .html|" /etc/apache2/mods-available/mime.conf
COPY config/apache/000-default.conf /etc/apache2/sites-available/000-default.conf
COPY config/apache/apache2.conf /etc/apache2/apache2.conf
RUN sed -i -e "s|^;date.timezone =.*$|date.timezone = Asia/Tokyo|" /etc/php/7.0/apache2/php.ini

EXPOSE 80
CMD ["/usr/sbin/apache2", "-D", "FOREGROUND"]